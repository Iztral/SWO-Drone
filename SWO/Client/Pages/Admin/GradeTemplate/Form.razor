<div class="row">
    <div class="col-md-7">
        <div class="row">
            <RadzenTemplateForm TItem="GradeTemplateViewModel" Data="@gradeTemplate" Submit="@OnValidSubmit">
                <RadzenFieldset Text="@ViewResources.Location">
                    <div class="row" style="margin-bottom: 20px">
                        <div class="col-md-4">
                            <RadzenLabel Text="@ModelResources.Name" />
                        </div>
                        <div class="col">
                            <RadzenTextBox style="display: block" Name="Name" @bind-Value="gradeTemplate.Name" />
                            <RadzenRequiredValidator Component="Name" Text="@ViewResources.Required" Style="position: absolute" />
                        </div>
                    </div>
                    <div class="row" style="margin-bottom: 20px">
                        <div class="col-md-4">
                            <RadzenLabel Text="@ModelResources.MaxPoints" />
                        </div>
                        <div class="col">
                            <RadzenNumeric style="display: block" Name="MaxPoints" @bind-Value="gradeTemplate.MaxPoints" />
                            <RadzenRequiredValidator Component="MaxPoints" Text="@ViewResources.Required" Style="position: absolute" />
                        </div>
                    </div>
                    <div class="row" style="margin-bottom: 20px">
                        <div class="col-md-4">
                            <RadzenLabel Text="@ModelResources.OptimalTime" />
                        </div>
                        <div class="col">
                            <RadzenNumeric style="display: block" Name="Phase" @bind-Value="gradeTemplate.OptimalTime" />
                        </div>
                    </div>
                    <div class="row" style="margin-bottom: 20px">
                        <div class="col-md-4">
                            <RadzenLabel Text="@ModelResources.Phase" />
                        </div>
                        <div class="col">
                            <RadzenNumeric style="display: block" Name="Phase" @bind-Value="gradeTemplate.Phase" />
                        </div>
                    </div>
                    <div class="row" style="margin-bottom: 20px">
                        <div class="col-md-4">
                            <RadzenLabel Text="@ModelResources.Note" />
                        </div>
                        <div class="col">
                            <RadzenTextArea style="display: block" Name="Note" @bind-Value="gradeTemplate.Note" />
                        </div>
                    </div>
                    <div class="row" style="margin-bottom: 20px">
                        <div class="col-md-4">
                            <RadzenLabel Text="@ModelResources.Description" />
                        </div>
                        <div class="col">
                            <RadzenTextArea style="display: block" Name="Description" @bind-Value="gradeTemplate.Description" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">
                        @ButtonText
                    </button>
                </RadzenFieldset>
            </RadzenTemplateForm>
        </div>
    </div>
</div>

@code {
    [Parameter] public GradeTemplateViewModel gradeTemplate { get; set; }
    [Parameter] public string ButtonText { get; set; } = ViewResources.Save;
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}